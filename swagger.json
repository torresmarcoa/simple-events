{
  "swagger": "2.0",
  "info": {
    "title": "Simple Events",
    "description": "API to manage events, users, comments, and tickets",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create new user",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User data"
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Update user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User updated"
          }
        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "Delete user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted"
          }
        }
      }
    },
    "/events": {
      "get": {
        "tags": [
          "Event"
        ],
        "summary": "Get all events",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "post": {
        "tags": [
          "Event"
        ],
        "summary": "Create event",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Event"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Event created"
          }
        }
      }
    },
    "/events/{id}": {
      "get": {
        "tags": [
          "Event"
        ],
        "summary": "Get event by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Event details"
          }
        }
      },
      "put": {
        "tags": [
          "Event"
        ],
        "summary": "Update event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Event"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated"
          }
        }
      },
      "delete": {
        "tags": [
          "Event"
        ],
        "summary": "Delete event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted"
          }
        }
      }
    },
    "/users/role/{roleName}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get users by role",
        "parameters": [
          {
            "name": "roleName",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Role to filter users by (e.g., organizer, attendee, staff)"
          }
        ],
        "responses": {
          "200": {
            "description": "Users with the specified role"
          },
          "404": {
            "description": "No users found with that role"
          }
        }
      }
    },
    "/comments": {
      "post": {
        "tags": [
          "Comment"
        ],
        "summary": "Add a comment to an event",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Comment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Comment added"
          }
        }
      }
    },
    "/comments/{id}": {
      "delete": {
        "tags": [
          "Comment"
        ],
        "summary": "Delete a comment",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Comment deleted"
          }
        }
      }
    },
    "/tickets": {
      "post": {
        "tags": [
          "Ticket"
        ],
        "summary": "Book a ticket",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Ticket"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Ticket booked"
          }
        }
      },
      "get": {
        "tags": [
          "Ticket"
        ],
        "summary": "Get all tickets",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/tickets/{id}": {
      "delete": {
        "tags": [
          "Ticket"
        ],
        "summary": "Cancel a ticket",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Ticket cancelled"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "fname": {
          "type": "string"
        },
        "lname": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "number"
        },
        "role": {
          "type": "string",
          "enum": [
            "organizer",
            "attendee",
            "staff"
          ]
        }
      }
    },
    "Event": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "dateTime": {
          "type": "string",
          "format": "date-time"
        },
        "address": {
          "type": "string"
        },
        "organizer": {
          "type": "string"
        },
        "capacity": {
          "type": "number"
        },
        "assistantsNumber": {
          "type": "number"
        },
        "performers": {
          "type": "string"
        },
        "eventType": {
          "type": "string",
          "enum": [
            "concert",
            "conference",
            "workshop",
            "meetup",
            "other"
          ]
        }
      }
    },
    "Comment": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "event": {
          "type": "string"
        }
      }
    },
    "Ticket": {
      "type": "object",
      "properties": {
        "user": {
          "type": "string"
        },
        "event": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "price": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "booked",
            "cancelled"
          ]
        }
      }
    }
  }
}